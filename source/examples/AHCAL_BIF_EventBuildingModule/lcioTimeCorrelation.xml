<?xml version="1.0" encoding="utf-8"?>
<dqm4hep>

  <archiver open="true" directory="/tmp" />
  
  <network>
    <runcontrol type="DimRunControlClient" name="AHCALRunControl" />
    
    <eventcollector type="DimEventClient">
      <parameter name="collectorName"> ahcal_event_collector </parameter>
      <parameter name="subEventIdentifier"> HCALEndcap </parameter>
      <parameter name="updateMode"> true </parameter>
      <parameter name="maxQueueSize"> 100 </parameter>
      <parameter name="streamerName"> LCIOStreamer </parameter>
    </eventcollector>
    
    <monitorelementcollector name="ahcal_me_collector"/>
  </network>
  
  <cycle type="TimerCycle" value="1" timeout="1" />
  
  <module type="TimeCorrelation" name="MyTimeCorrelation">
    
    <parameter name="Chip1"> 237 </parameter>
    <parameter name="Chip2"> 241 </parameter>
    <parameter name="Chip3"> 117 </parameter>


    <parameter name="Channel1"> 0 </parameter>
    <parameter name="Channel2"> 0 </parameter>
    <parameter name="Channel3"> 0 </parameter>

    <!-- Wrong Bits -->

    <monitorElement ID="TDCvsTime_1"
		    name="TDCvsTime_1" path="/TimeCorrelations_1" type="user" ROOTClass="TGraph" title="TDC vs BIF time" 
		    resetPolicy="NoReset" drawOption="ap"/>

    <monitorElement ID="BXIDvsTime_1"
		    name="BXIDvsTime_1" path="/TimeCorrelations_1" type="user" ROOTClass="TGraph" title="BXID vs BIF time" 
		    resetPolicy="NoReset" drawOption="ap"/>

    <monitorElement ID="BXIDvsBXIDbif_1"
		    name="BXIDvsBXIDbif_1" path="/TimeCorrelations_1" type="user" ROOTClass="TGraph" title="BXID vs BIF BXID" 
		    resetPolicy="NoReset" drawOption="ap"/>

    <!--   -->
    <monitorElement ID="TDCvsTime_2"
		    name="TDCvsTime_2" path="/TimeCorrelations_2" type="user" ROOTClass="TGraph" title="TDC vs BIF time" 
		    resetPolicy="NoReset" drawOption="ap"/>

    <monitorElement ID="BXIDvsTime_2"
		    name="BXIDvsTime_2" path="/TimeCorrelations_2" type="user" ROOTClass="TGraph" title="BXID vs BIF time" 
		    resetPolicy="NoReset" drawOption="ap"/>

    <monitorElement ID="BXIDvsBXIDbif_2"
		    name="BXIDvsBXIDbif_2" path="/TimeCorrelations_2" type="user" ROOTClass="TGraph" title="BXID vs BIF BXID" 
		    resetPolicy="NoReset" drawOption="ap"/>

    <!--   -->
    <monitorElement ID="TDCvsTime_3"
		    name="TDCvsTime_3" path="/TimeCorrelations_3" type="user" ROOTClass="TGraph" title="TDC vs BIF time" 
		    resetPolicy="NoReset" drawOption="ap"/>

    <monitorElement ID="BXIDvsTime_3"
		    name="BXIDvsTime_3" path="/TimeCorrelations_3" type="user" ROOTClass="TGraph" title="BXID vs BIF time" 
		    resetPolicy="NoReset" drawOption="ap"/>

    <monitorElement ID="BXIDvsBXIDbif_3"
		    name="BXIDvsBXIDbif_3" path="/TimeCorrelations_3" type="user" ROOTClass="TGraph" title="BXID vs BIF BXID" 
		    resetPolicy="NoReset" drawOption="ap"/>


  </module>

 
  
</dqm4hep>
